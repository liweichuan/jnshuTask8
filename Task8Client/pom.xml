    </dependency>
    <!--ali邮件-->
    <dependency>
      <groupId>com.aliyun</groupId>
      <artifactId>aliyun-java-sdk-dm</artifactId>
      <version>3.1.0</version>
    </dependency>
    <!--字符转化-->
    <!-- https://mvnrepository.com/artifact/com.google.code.gson/gson -->
